---
import Intro from "../components/Intro.astro";
import PostsList from "../components/PostsList.astro";
import MainLayout from "../layouts/MainLayout.astro";
import SectionLayout from "../layouts/SectionLayout.astro";
import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";
import ProjectsPreview from "@/components/ProjectsPreview.astro";
import { Mail } from "lucide-react";
---

<MainLayout title="Maximilian Zirps - Freelance Software Engineer">
  <div class="flex flex-col space-y-24">
    <SectionLayout>
      <Intro />
    </SectionLayout>
    <SectionLayout>
      <h2 slot="title" class="text-center">Latest writings</h2>
      <PostsList nrOfPosts={3} />
      <div class="flex items-center justify-center">
        <a
          aria-label="Read more posts in my blog"
          href="/blog"
          class={cn(buttonVariants({ size: "lg" }), "w-fit mt-8 mx-auto")}
        >
          Read more
        </a>
      </div>
    </SectionLayout>
    <SectionLayout>
      <h2 slot="title" class="text-center">Currently working on</h2>
      <ProjectsPreview />
      <div class="flex items-center justify-center">
        <a
          aria-label="See other projects"
          href="/projects"
          class={cn(buttonVariants({ size: "lg" }), "w-fit mt-8 mx-auto")}
        >
          See other projects
        </a>
      </div>
    </SectionLayout>
    <SectionLayout>
      <h2 slot="title" class="text-center">
        Want to build something together?
      </h2>
      <div class="flex flex-col items-center justify-center">
        <p class="text-center">
          I'm always excited to create cool new things. <br />Feel free to reach
          out via email at <a
            aria-label="Send me an email."
            href="mailto:hello@maxzirps.at"
            class={cn(buttonVariants({ variant: "link" }), "p-0 underline")}
          >
            hello@maxzirps.at
          </a>
        </p>
      </div>
    </SectionLayout>
  </div>
</MainLayout>
