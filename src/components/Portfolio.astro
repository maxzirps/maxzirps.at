---
import { Image } from "astro:assets";
import robot from "../assets/network-delivery-robot-1.gif";
---

<script>
  import Typed from "typed.js";

  const codeString = `
import { useState } from 'react';

// TODO: implement awesome project
`;

  document.addEventListener("DOMContentLoaded", () => {
    const typed = new Typed("#code-block", {
      strings: [codeString],
      typeSpeed: 50,
      startDelay: 1000,
      backDelay: 3000,
      showCursor: true,
      loop: true,
      loopCount: Infinity,
    });
  });
