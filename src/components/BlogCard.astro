---
import Card from "./Card.astro";

const { post } = Astro.props;
const { title, pubDate, heroImage } = post.data;
---

<Card href={`/blog/${post.slug}/`} title={title} date={pubDate}>
  <img
    class="h-32 hidden"
    src={heroImage}
    alt=`Blog post image for ${title}`
    slot="image"
  />
</Card>
