---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
const { title } = Astro.props;
import { fade } from "astro:transitions";
import { ViewTransitions } from "astro:transitions";
import "aos/dist/aos.css";
import "@/styles/globals.css";
---

<html lang="en">
  <head>
    <title>{title}</title>
    <ViewTransitions />
    <meta
      name="description"
      content="Got an idea for a website or app? I'm here to help you build it, blending front-end development and design to make it shine. Let's talk and make your project happen!"
    />
    <meta name="robots" content="index,follow" />
    <meta name="googlebot" content="index,follow" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta
      name="”keywords”"
      content="react, frontend, frontend developer, javascript, freelance, astro, maxzirps, machine learning, transformers"
    />

    <script>
      import AOS from "aos";
      AOS.init();
    </script>
  </head>
  <body
    transition:animate={fade({ duration: "0.5s" })}
    data-aos="fade-in"
    data-aos-duration="500"
  >
    <div class="flex flex-col max-w-screen lg:max-w-4xl mx-auto min-h-screen">
      <Nav />
      <main class="grow flex flex-col px-8 lg:px-0 my-8">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
